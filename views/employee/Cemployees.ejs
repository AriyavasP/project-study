<%- include('../partials/title.ejs') %>
<div class="cover-container w-100 p-3">
  <%- include('../partials/header.ejs') %>
  <main class="text-dark mx-5">
    <div class="row">
      <% data.forEach(user => { %>
      <div class="col pt-5">
        <div class="card" style="width: 18rem">
          <form
            class="text-start"
            action="/employee/update/status/<%= user.id_employee %>"
            method="POST"
          >
            <button id="switch" class="btn">
              <% if (user.status_employee == "admin") { %>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-award-fill"
                viewBox="0 0 16 16"
              >
                <path
                  d="m8 0 1.669.864 1.858.282.842 1.68 1.337 1.32L13.4 6l.306 1.854-1.337 1.32-.842 1.68-1.858.282L8 12l-1.669-.864-1.858-.282-.842-1.68-1.337-1.32L2.6 6l-.306-1.854 1.337-1.32.842-1.68L6.331.864 8 0z"
                />
                <path
                  d="M4 11.794V16l4-1 4 1v-4.206l-2.018.306L8 13.126 6.018 12.1 4 11.794z"
                />
              </svg>
              <% } else { %>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-award"
                viewBox="0 0 16 16"
              >
                <path
                  d="M9.669.864 8 0 6.331.864l-1.858.282-.842 1.68-1.337 1.32L2.6 6l-.306 1.854 1.337 1.32.842 1.68 1.858.282L8 12l1.669-.864 1.858-.282.842-1.68 1.337-1.32L13.4 6l.306-1.854-1.337-1.32-.842-1.68L9.669.864zm1.196 1.193.684 1.365 1.086 1.072L12.387 6l.248 1.506-1.086 1.072-.684 1.365-1.51.229L8 10.874l-1.355-.702-1.51-.229-.684-1.365-1.086-1.072L3.614 6l-.25-1.506 1.087-1.072.684-1.365 1.51-.229L8 1.126l1.356.702 1.509.229z"
                />
                <path
                  d="M4 11.794V16l4-1 4 1v-4.206l-2.018.306L8 13.126 6.018 12.1 4 11.794z"
                />
              </svg>
              <% } %>
            </button>
            <label for="switch">Set Status Admin (id: <%= user.id_employee%>)</label>
          </form>
          <a
            href="/employee/update/img/<%= user.id_employee %>"
            ><img
              src="../images/<%= user.img %>"
              class="card-img-top"
              style="height: 12rem"
          /></a>
          <div class="card-body">
            <h5 class="card-title">
              ข้อมูลของ: <%= user.firstname %> <%= user.lastname %>
            </h5>
            <p class="card-text">Address: <%= user.address %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">สถานะ: <%= user.status_employee %></li>
            <li class="list-group-item">เพศ: <%= user.gender %></li>
            <li class="list-group-item">เบอร์โทรติดต่อ: <%= user.tel %></li>
            <li class="list-group-item">อีเมล: <%= user.email %></li>
          </ul>
          <div class="card-body">
            <a
              href="/employee/view/<%= user.id_employee %> "
              type="submit"
              class="btn btn-primary px-3"
              >View</a
            >
            <a
              href="/employee/view/delete/<%= user.id_employee %> "
              class="card-link px-3"
              >Delete</a
            >
            <a
              href="/employee/view/create/<%= user.id_employee %> "
              class="card-link <% if (user.password_employee) { %> text-danger <% } %>"
              >CreactID</a
            >
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </main>
</div>
