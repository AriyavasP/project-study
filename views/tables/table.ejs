    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
    <style>
      body {
        position: relative;
        height: 100vh;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      body::before {
        content: "";
        background-size: cover;
        position: absolute;
        top: 0px;
        right: 0px;
        bottom: 0px;
        left: 0px;
        opacity: 0.4;
        background-image: url(https://scontent.fbkk14-1.fna.fbcdn.net/v/t39.30808-6/305011343_1028349424503406_2539947708639187869_n.jpg?_nc_cat=100&ccb=1-7&_nc_sid=730e14&_nc_eui2=AeEKecj9SB6A5l5ij23fT8pYNFUrLL8bg9g0VSssvxuD2In4lQ9SZoHDGiGoQzTbd_i8FaVTwbPCCPfe0RzMQhfi&_nc_ohc=gdGz4R0xnUMAX-USpJX&_nc_ht=scontent.fbkk14-1.fna&oh=00_AfBFj_gMtEat-JmJezsKLkrsc3ZHkN3os6nmw5OK2WzmRw&oe=63634D09);
      }
    </style>
  </head>
  <body>
    <div class="m-5 bg-transparent" style="position: relative">
      <div class="text-center p-5">
        <h1>โต๊ะ : <%= id %></h1>
        <img
          class="rounded img-thumbnail"
          src="../img-Table-Zone/Zone<%= id %>.jpg"
          width="470"
          height="300"
        />
      </div>
      <div class="text-center pb-5">
        <a href="/" class="btn btn-success">กลับหน้าหลัก</a>
      </div>
    </div>
  </body>
</html>
